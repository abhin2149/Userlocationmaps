<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="Calibri"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold"
        android:translationZ="2dp" />

    <Button
        android:id="@+id/assetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imuButton"
        android:layout_marginBottom="21dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="View or capture new Asset"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="271dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="42dp"
        app:srcCompat="@drawable/tiger" />

    <Button
        android:id="@+id/imuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trackButton"
        android:layout_marginBottom="17dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Check realtime IMU Data of Phone"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/trackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:background="@color/colorAccent"
        android:hint="click button to start"
        android:padding="10dp"
        android:text="Begin Tracking module"
        android:textColor="@color/white" />

</RelativeLayout>